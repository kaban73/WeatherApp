<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textAutoComplete"
        android:hint="@string/type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:completionThreshold="1"
        />

    <LinearLayout
        android:id="@+id/infoTodayLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/autoCompleteTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/todayDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="29 June, 29.06.2024"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/todayWeatherLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_round"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:paddingStart="56dp"
            android:paddingEnd="56dp">
            <ImageView
                android:id="@+id/todayWeatherImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/todayWeatherDegrees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="30C"
                android:textAlignment="center"
                android:textSize="36sp"/>
            <TextView
                android:id="@+id/rangeDegreesTodayWeatherTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Min: 21C ; Max: 30C"/>
            <TextView
                android:id="@+id/windTodayWeatherTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Wind: 18-21 m/s SW"/>

            <TextView
                android:id="@+id/precipTodayWeatherTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Precip: 18 mm"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todayWeatherRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/futureWeatherRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/infoTodayLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/futureWeatherRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayWeatherRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>